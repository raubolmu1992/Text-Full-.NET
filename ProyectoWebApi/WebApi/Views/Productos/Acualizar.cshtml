@model List<model.entity.Productos>
@{ ViewBag.Title = "Acualizar"; }
<br />
<br />
<br />
<div class="container-fluid">

    <form>
        <div>
            <button type="button" class="btn btn-primary" onclick="ActualizarEstudiantes()">Actualizar</button>
        </div><br>
        <table class="table">
            <tr class="btn-primary">
                <th scope="col">Id</th>
                <th scope="col">Tipo de Producto</th>
                <th scope="col">Codigo Unico</th>
                <th scope="col">Nombre del Producto</th>
                <th scope="col">Activo</th>
                <th scope="col">Cantidad</th>
                <th scope="col">valor</th>
                @*<th scope="col">Total</th>*@
            </tr>
            @foreach (var objProducto in Model)
            {
<tr>
    <td> <input type="text" id="txtIdProducto" value="@objProducto.IdProductos" /></td>
    <td> <input type="text" id="txtTipoProducto" value="@objProducto.TipoProducto" /></td>
    <td> <input type="text" id="txtCodigoUnico" value="@objProducto.CodigoUnico" /></td>
    <td> <input type="text" id="txtNombreProducto" value="@objProducto.NombreProducto" /></td>
    <td> <input type="text" id="txtActivo" value="@objProducto.Activo" /></td>
    <td> <input type="text" id="txtCantidad" value="@objProducto.Cantidad" /></td>
    <td> <input type="text" id="txtValor" value="@objProducto.Valor" /></td>
</tr>            }

        </table>
    </form>
</div>

<script src="~/Scripts/Editar.js"></script>



