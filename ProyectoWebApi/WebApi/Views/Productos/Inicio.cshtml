<head>
    <!-- CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.0.0.js" crossorigin="anonymous"></script>
    <!-- jQuery and JS bundle w/ Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>

</head>


@model List<model.entity.Productos>
@{ ViewBag.Title = "Inicio"; }
<br />
<br />
<br />
<div class="container-fluid">
    <div>
        <a class="btn btn-primary" href="~/Productos/Create">Nuevo</a>

        <form action="/Productos/Buscar" method="post">
            <br />
            <input type="text" class="form-control" name="id" placeholder="Buscar Producto" required autofocus>
            <br />
            <button class="btn btn-primary" type="submit">
                Buscar
            </button>
        </form>
    </div><br>

    <table class="table">
        <tr class="btn-primary">

            <th scope="col">Id</th>
            <th scope="col">Tipo de Producto</th>
            <th scope="col">Codigo Unico</th>
            <th scope="col">Nombre del Producto</th>
            <th scope="col">Activo</th>
            <th scope="col">Cantidad</th>
            <th scope="col">valor</th>
            <th scope="col">Total</th>
        </tr>
        @foreach (var objProducto in Model)
        {
<tr>
    <td>@objProducto.IdProductos</td>
    <td>@objProducto.TipoProducto</td>
    <td>@objProducto.CodigoUnico</td>
    <td>@objProducto.NombreProducto</td>
    <td>@objProducto.Activo</td>
    <td>@objProducto.Cantidad</td>
    <td>@objProducto.Valor</td>
    <td>@objProducto.Total</td>

    <td><a class="btn btn-danger" href="~/Productos/Acualizar/@objProducto.IdProductos">Editar</a></td>
    <td><a class="btn btn-danger" href="~/Productos/delete/@objProducto.IdProductos">Eliminar</a></td>
</tr>
}

    </table>
</div>



<script src="~/Scripts/Producto.js"></script>

